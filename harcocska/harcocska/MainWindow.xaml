<Window x:Class="harcocska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:harcocska"
        mc:Ignorable="d"
        Title="Harcocska" Height="737.561" Width="800" Background="{x:Null}">
	<Grid RenderTransformOrigin="0.502,0.611" Background="Gray" Margin="0,0,-8,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="171*"/>
			<ColumnDefinition Width="127*"/>
		</Grid.ColumnDefinitions>
		<Canvas x:Name="canvas1" HorizontalAlignment="Left" Height="385" Margin="0,24,0,0" VerticalAlignment="Top" Width="594" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" MouseLeftButtonUp="canvas1_MouseLeftButtonUp" MouseUp="canvas1_MouseUp_1" MouseRightButtonUp="canvas1_MouseRightButtonUp"/>
		<Button x:Name="b1" Content="Tick" HorizontalAlignment="Left" Margin="40,46,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1" Background="#FFDDDDDD" Height="33" Grid.Column="1">
			<Button.Effect>
				<DropShadowEffect BlurRadius="20"/>
			</Button.Effect>
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-13.066"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Menu Height="19" VerticalAlignment="Top" Width="800" HorizontalAlignment="Center" Grid.ColumnSpan="2">
			<MenuItem Width="36" Header="File">
				<MenuItem/>
				<MenuItem/>
				<MenuItem Background="#FFEC6262" Header="Exit" Click="Exit_MenuItem_Click"/>
			</MenuItem>
			<MenuItem Header="Game">
				<MenuItem Header="Start" Click="MenuItem_Click"/>
			</MenuItem>
		</Menu>
		<StackPanel x:Name="stackpanel" HorizontalAlignment="Right" Margin="0,40,10,34" Width="289" Grid.Column="1"/>
	</Grid>
</Window>
